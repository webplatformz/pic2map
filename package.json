{
  "name": "pic2map",
  "version": "0.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/webplatformz/pic2map.git"
  },
  "private": true,
  "scripts": {
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "start:client": "cd client && npm start",
    "start:server": "cd server && npm start",
    "start": "concurrently \"npm run start:client\" \"npm run start:server\"",
    "build:client": "cd client && npm run build",
    "build:prod": "rimraf server/client && mkdirp server/client && npm run build:client && cpx client/build/**/*.* server/client",
    "test": "cd client && react-scripts test --env=jsdom"
  },
  "devDependencies": {
    "concurrently": "3.5.1",
    "cpx": "1.5.0",
    "mkdirp": "0.5.1",
    "rimraf": "2.6.2"
  }
}
